BoxLayout:
    orientation: "vertical"
    MDToolbar:
        id: toolbar
        title: "SJ's News Crawler"
        elevation: 10
    WindowManager:
        id:WM
        SearchPage:
            id:SearchPage
        ResultPage:
            id:ResultPage



<SearchPage>:
    name:"search"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            padding: dp(20)
            spacing: dp(10)
            cols: 1
            size_hint_y: None
            height: self.minimum_height

            MDLabel:
                text: "Select Press"
            MDSeparator:

            StackLayout:
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)
                id: pressList
            Widget:
                size_hint_y: None
                height: dp(1)

        BoxLayout:
            id: box
            padding: dp(20)
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)
            orientation: "vertical"
            pos_hint: {"center_x": .5}
            MDLabel:
                text: "Keywords"
            MDSeparator:
            MDTextField:
                id: textField
                hint_text: "Use comma for multiple keywords"
                helper_text: "Enter at least one keywords"
                helper_text_mode: "persistent"
            MDFillRoundFlatButton:
                text: "CRAWL"
                pos_hint: {"center_x": .5}
                on_release:
                    root.manager.transition.direction = "up"
                    app.runResultPage()

        ScrollView:
            MDList:

<ResultPage>:
    name:"result"
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            padding: dp(20)
            spacing: dp(10)
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            StackLayout:
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)
                MDFillRoundFlatButton:
                    text: "Go Back"
                    on_release:
                        app.root.ids.WM.current = "search"
                        root.manager.transition.direction = "down"
            MDSeparator:
        ScrollView:
            MDList:
                id: NewsList
